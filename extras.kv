<AccountListItem>:
    padding: 16, 0, 16, 0
    spacing: 16
    size_hint: 1, None
    height: 56
    radius: 5
    #md_bg_color: rgba(249, 249, 249, 80)
    on_release:
        print(self.text)
    MDBoxLayout:
        padding: 0
        size_hint: None, None
        width: 40
        height: 40
        pos_hint: {"center_y": .5}
        #md_bg_color: rgba(169, 50, 38, 80)
        Image:
            source: root.source
            adaptive_size: True
            #pos_hint: {"center_x": .12, "center_y": .5}
    MDBoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            MDLabel:
                text: root.text
                font_name: "MPoppins"
                font_size: 12
                halign: "center"
                adaptive_size:True
                pos_hint: {"center_y": .5}
                #md_bg_color: rgba(255, 170, 23, 255)
            AnchorLayout:
                anchor_x: 'right'
                MDBoxLayout:
                    padding: 0
                    size_hint: None, None
                    width: 40
                    height: 40
                    pos_hint: {"center_y": .5}
                    #md_bg_color: rgba(38, 50, 169, 80)
                    MDIcon:
                        icon: root.icon
                        halign: 'right'
                        pos_hint: {"center_x": .5, "center_y": .5}
        MDBoxLayout:
            adaptive_height: True
            pos_hint: {"center_x": .5, "center_y": 0}
            MDSeparator: